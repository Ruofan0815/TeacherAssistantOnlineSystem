<div id="login">
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div class="login-box col-md-12">
                  <%= form_for(:session, :html => {class: "form", role: "form", id: "login-form"}, url: login_path) do |f| %>
                        <h3 class="text-center text-info">Login</h3>
                        <div class="form-group">
                            <%= f.label :email, class:"text-info" %>
                            <!-- <label class="text-info">Username:</label><br> -->
                            <%= f.email_field :email, class: "form-control", placeholder: "Enter email ..." %>
                            <!-- <input type="text" name="username" id="username" class="form-control"> -->
                        </div>
                        <div class="form-group">
                            <%= f.label :Password, class: "text-info" %>
                            <!-- <label for="password" class="text-info">Password:</label><br> -->
                            <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
                            <!-- <input type="text" name="password" id="password" class="form-control"> -->
                        </div>
                        <div class="form-group">
                            <!-- <label for="remember-me" class="text-info"><span>Remember me</span>Â <span><input id="remember-me" name="remember-me" type="checkbox"></span></label><br> -->
                            <%= f.submit "Submit", class: "btn btn-info btn-md" %>
                            <!-- <input type="submit" name="submit" class="btn btn-info btn-md" value="submit"> -->
                        </div>
                        <!-- <div id="register-link" class="text-right">
                            <a href="#" class="text-info">Register here</a>
                        </div> -->
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
