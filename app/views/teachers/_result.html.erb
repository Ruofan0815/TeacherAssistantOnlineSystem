<div class="card">
  <div class="card-header">
    <h3>Teacher Assistants for this course</h3>
  </div>
  <div class="card-body">
    <table class="table table-sm table-striped">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @teachers.each do |teacher| %>
          <tr>
            <td><%= teacher.last_name %> <%=teacher.first_name %></td>
            <td><%= teacher.email %></td>
            <td>
              <%= link_to "Remove", usercourses_path(teacher), method: :delete,
                data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
